{
	"name": "OS2faktor Edge Extension",
	"manifest_version": 3,
	"version": "2.5.2",
	"description": "OS2faktor MFA klient",
	"permissions": [ "storage", "tabs", "background", "alarms" ],
	"host_permissions" : [ "https://backend.os2faktor.dk/*", "https://frontend.os2faktor.dk/*" ],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"128": "images/icon_128.png"
		}
	},
	"content_security_policy": {
		"extension_pages" : "script-src 'self'; object-src 'self'"
	},
	"icons": {
		"128": "images/icon_128.png"
	},
	"web_accessible_resources": [{
		"resources": ["images/icon_128.png"],
		"matches":["https://*.dk/*"]
	}],
	"storage": {
		"managed_schema": "schema.json"
	},
	"content_scripts": [{
		"matches":["https://*.dk/*"],
		"js": ["eventListener.js"]
	}],
	"externally_connectable": {
		"matches": ["https://*.os2faktor.dk/*" ]
	}
}
